@model IEnumerable<BoardWedApp.Models.profile>

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_Notification" />

<!-- Heading Row-->
<div class="row gx-4 gx-lg-5 align-items-center my-5">
    <div class="col-lg-7">
        <img class="img-fluid rounded mb-4 mb-lg-0" src="/Uploads/@Model.FirstOrDefault(x => x.Division == "Top").FileName" width="800" alt="..." /></div>
    <div class="col-lg-5">
        <h1 class="font-weight-light">@Model.FirstOrDefault(x => x.Division == "Top").Title" </h1>
        <p>@Html.Raw(@Model.FirstOrDefault(x => x.Division == "Top").Description )</p>
        <a class="btn btn-primary" href="@Model.FirstOrDefault(x => x.Division == "Top").Url" target="_blank">버튼1</a>
    </div>
</div>
<!-- Call to Action-->
<div class="card text-white bg-secondary my-5 py-4 text-center">
    <div class="card-body"><p class="text-white m-0">어서오세요 넥슨에 온것을 환영합니다!!!</p></div>
</div>
<!-- Content Row-->
<div class="row gx-4 gx-lg-5">
